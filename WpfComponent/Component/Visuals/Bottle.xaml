<UserControl x:Class="WpfComponent.Component.Visuals.Bottle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Visuals="clr-namespace:WpfComponent.Component.Visuals"
    Height="80" 
    Width="120">
    <UserControl.Background>
        <ImageBrush ImageSource="/WpfComponent;component/Images/Bottle.PNG" Stretch="Fill"></ImageBrush>
    </UserControl.Background>
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="202*" />
            <ColumnDefinition Width="20*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="114*" />
            <RowDefinition Name="LevelRect" Height="116*" />
            <RowDefinition Height="18*" />
        </Grid.RowDefinitions>

        <Rectangle Name="Level" Grid.Row="1" Grid.Column="1" Fill="AliceBlue" Opacity="1" VerticalAlignment="Bottom"></Rectangle>
    </Grid>
</UserControl>
