<UserControl x:Class="BioScadaClient.AddScript"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="146" Width="207">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.713,0.698" StartPoint="0.713,-0.139">
                <GradientStop Color="#FFFFFFFF" Offset="0.933"/>
                <GradientStop Color="#FF00CC00" Offset="0.337"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox Margin="13,20,12,0" Name="txtName" Height="25" VerticalAlignment="Top" />
        <Button Height="23" Margin="13,0,0,11" Name="button1" Click="AddButton_Click" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="73">OK</Button>
        <Button Height="23" Margin="0,0,12,11" Name="button2" Click="CloseButton_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="70">Cancel</Button>
        <Label Margin="13,0,49,0" Name="label1" Height="23" VerticalAlignment="Top">Name Script</Label>
        <GroupBox Margin="13,52,12,39" Header="Language Script">
            <StackPanel>
                <RadioButton Height="16" Name="radioButton1" IsChecked="True">CSharp</RadioButton>
                <RadioButton Name="radioButton3" Height="15">Visual Basic</RadioButton>
            </StackPanel>

        </GroupBox>

    </Grid>
</UserControl>
